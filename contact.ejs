			<script>
				// When the "Fetch Data" button is clicked, send the parameters via AJAX
				$('#saveQuery').click(function() {
				 alert("Saving Query");
				  //document.getElementById('saveQuery').disabled = true;
				  var username = $('#username').val();// Get the user ID value
				  //alert(stdname);
				  var phone = $('#phone').val();
				  var email = $('#email').val();
				  var subject = $('#subject').val();
				  var query = $('#query').val();
				  
				  // Get the password value
	  
				  // Send a GET request with parameters using AJAX
				  $.ajax({
					url: '/saveUserQuery',  // Server route to post data
					method: 'POST',
					data: { username: username, phone: phone, email: email, subject: subject, query: query},  // Parameters to be sent
					success: function (data) {
					  // Clear the previous content
					  $('#statusMsg').empty();
	  
					  // Display the retrieved data
					  if (data.success) {
						//data.forEach(user => {
						//alert(data.studentid);
											
						$('#statusMsg').html("<p><strong>"+data.message+"</strong></p>");
						
						// });
						//alert("Authentication Failed");
						//$('#validationMsg').html('<p>' + 'Invalid User Name or Password' + '</p>');
					  }
					  else {
						//alert("Authentication Success");
						//alert(data.studentid);
						$('#statusMsg').html("<p><strong>"+data.message+"</strong></p>");
					  }
					},
					error: function (err) {
					  console.error('Error  data:', err);
					  $('#statusMsg').html('<p>Error occurred while saving data.</p>');
					}
				  });
				});
			  </script>
